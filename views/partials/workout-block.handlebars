{{#each exercises}}
<div class="exercise-container" id="{{_id}}">
    <form class="update-form" id="{{_id}}">

        <input type="text" class="exercise-name" value="{{name}}">
        <p class="exercise-count">Repeat for <input type="number" value="{{count}}" name="count"> <input type="text"
                value="{{unit}}" name="unit"></p>
        {{!-- <input class="exercise-count" value="Repeat for {{count}} {{unit}}!"> --}}
        <textarea class="exercise-notes" value="{{notes}}" rows="5" cols="25">{{notes}}</textarea>
        <div class="exer-buttons">
        <button type="submit">Update This Exercise!</button>
        <button class="exer-delete" id="{{_id}}">Delete Exercise</button>
</div>
    </form>
</div>
{{/each}}